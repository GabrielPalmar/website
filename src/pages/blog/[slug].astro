---
import Layout from '../../layouts/Layout.astro';
import { posts, getPostBySlug } from '../../data/posts';

// Generate static paths for all posts
export function getStaticPaths() {
  return posts.map(post => ({
    params: { slug: post.slug }
  }));
}

// Get the post slug from URL
const { slug } = Astro.params;
const post = getPostBySlug(slug as string);

// 404 if post not found
if (!post) {
  return Astro.redirect('/404');
}

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function parseContent(content: string) {
  return content
    .replace(/^### (.*$)/gm, '<h3>$1</h3>')
    .replace(/^## (.*$)/gm, '<h2>$1</h2>')
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/^- (.*$)/gm, '<li>$1</li>')
    .split('\n\n')
    .map(block => {
      block = block.trim();
      if (!block) return '';
      if (block.startsWith('<')) return block;
      if (block.includes('<li>')) return `<ul>${block}</ul>`;
      return `<p>${block}</p>`;
    })
    .join('\n');
}
---

<Layout title={`${post.title} | Gabriel Palmar`} activeNav="blog">
  <article class="post-page">
    <header class="post-header">
      <div class="container">
        <a href="/blog" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back to Blog
        </a>

        <div class="post-meta">
          <span class="post-category">{post.category}</span>
          <span class="post-date">{formatDate(post.date)}</span>
          <span class="post-read-time">{post.readTime}</span>
        </div>

        <h1 class="post-title">{post.title}</h1>
        {post.subtitle && <p class="post-subtitle">{post.subtitle}</p>}
      </div>
    </header>

    <section class="post-content">
      <div class="container">
        <div class="content-body" set:html={parseContent(post.content)} />
      </div>
    </section>

    <nav class="post-nav">
      <div class="container">
        <a href="/blog" class="nav-link">
          Back to All Posts
        </a>
      </div>
    </nav>
  </article>
</Layout>

<style>
  .post-page { padding-top: 5rem; }
  .container { max-width: 700px; margin: 0 auto; padding: 0 2rem; }

  .post-header {
    padding: 3rem 0 4rem;
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }
  .back-link:hover { color: var(--color-accent); }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .post-category {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.625rem;
    background: var(--color-accent-glow);
    color: var(--color-accent);
    border-radius: 4px;
    text-transform: uppercase;
  }

  .post-date, .post-read-time {
    font-size: 0.875rem;
    color: var(--color-text-dim);
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  .post-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .post-content { padding: 4rem 0; }

  .content-body {
    font-size: 1.0625rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  .content-body :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 3rem 0 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }
  .content-body :global(h2:first-child) { margin-top: 0; }

  .content-body :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 2rem 0 1rem;
  }

  .content-body :global(p) { margin-bottom: 1.5rem; }
  .content-body :global(strong) { color: var(--color-text); font-weight: 600; }
  .content-body :global(ul) { margin-bottom: 1.5rem; padding-left: 1.5rem; }
  .content-body :global(li) { margin-bottom: 0.5rem; }

  .post-nav {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
  }

  .nav-link {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: color 0.2s ease;
  }
  .nav-link:hover { color: var(--color-accent); }

  @media (max-width: 640px) {
    .post-header { padding: 2rem 0 3rem; }
    .container { padding: 0 1.5rem; }
  }
</style>
