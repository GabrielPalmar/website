---
import Layout from '../../layouts/Layout.astro';
import { projects, getProjectBySlug, getAllSlugs } from '../../data/projects';

// Generate static paths for all projects
export function getStaticPaths() {
  return projects.map(project => ({
    params: { slug: project.slug }
  }));
}

// Get the project slug from URL
const { slug } = Astro.params;
const project = getProjectBySlug(slug as string);

// 404 if project not found
if (!project) {
  return Astro.redirect('/404');
}
---

<Layout title={`${project.title} | Gabriel Palmar`} activeNav="projects">
  <article class="project-page">
    <!-- Header -->
    <header class="project-header">
      <div class="container">
        <a href="/projects" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back to Projects
        </a>
        
        <div class="header-meta">
          <span class="project-category">{project.category}</span>
          <span class="project-date">{project.date}</span>
        </div>
        
        <h1 class="project-title">{project.title}</h1>
        <p class="project-subtitle">{project.subtitle}</p>
        
        <div class="project-tags">
          {project.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </header>

    <!-- Overview Cards -->
    <section class="overview-section">
      <div class="container">
        <div class="overview-grid">
          <div class="overview-card">
            <h3>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
              </svg>
              Problem
            </h3>
            <p>{project.overview.problem}</p>
          </div>
          
          <div class="overview-card">
            <h3>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"></path>
              </svg>
              Solution
            </h3>
            <p>{project.overview.solution}</p>
          </div>
          
          <div class="overview-card">
            <h3>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
              </svg>
              Outcome
            </h3>
            <p>{project.overview.outcome}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <section class="content-section">
      <div class="container">
        {project.sections.map((section: any) => (
          <div class="content-block">
            <h2>{section.title}</h2>
            <div class="content-text">
              <p>{section.content}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Links -->
    {(project.links.github || project.links.demo || project.links.blog) && (
      <section class="links-section">
        <div class="container">
          <div class="links-grid">
            {project.links.github && (
              <a href={project.links.github} class="link-card" target="_blank" rel="noopener noreferrer">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
                <span>View on GitHub</span>
              </a>
            )}
            {project.links.demo && (
              <a href={project.links.demo} class="link-card" target="_blank" rel="noopener noreferrer">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
                <span>Live Demo</span>
              </a>
            )}
            {project.links.blog && (
              <a href={project.links.blog} class="link-card">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <span>Related Article</span>
              </a>
            )}
          </div>
        </div>
      </section>
    )}

    <!-- Navigation -->
    <nav class="project-nav">
      <div class="container">
        <a href="/projects" class="nav-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back to All Projects
        </a>
      </div>
    </nav>
  </article>
</Layout>

<style>
  .project-page {
    padding-top: 5rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header */
  .project-header {
    padding: 3rem 0 4rem;
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .header-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .project-category {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-date {
    font-size: 0.875rem;
    color: var(--color-text-dim);
  }

  .project-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .project-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.375rem 0.75rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    color: var(--color-text-muted);
  }

  /* Overview */
  .overview-section {
    padding: 4rem 0;
    background: var(--color-bg-elevated);
  }

  .overview-section .container {
    max-width: 1000px;
  }

  .overview-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .overview-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .overview-card h3 {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .overview-card h3 svg {
    color: var(--color-accent);
  }

  .overview-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    white-space: pre-line;
  }

  /* Content */
  .content-section {
    padding: 4rem 0;
  }

  .content-block {
    margin-bottom: 3rem;
  }

  .content-block:last-child {
    margin-bottom: 0;
  }

  .content-block h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .content-text {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  .content-text p {
    white-space: pre-line;
  }

  /* Links */
  .links-section {
    padding: 3rem 0;
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
  }

  .links-grid {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    color: var(--color-text-muted);
    transition: all 0.2s ease;
  }

  .link-card:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .link-card span {
    font-size: 0.9375rem;
    font-weight: 500;
  }

  /* Navigation */
  .project-nav {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .overview-grid {
      grid-template-columns: 1fr;
    }

    .links-grid {
      flex-direction: column;
    }
  }

  @media (max-width: 640px) {
    .project-header {
      padding: 2rem 0 3rem;
    }

    .container {
      padding: 0 1.5rem;
    }
  }
</style>
