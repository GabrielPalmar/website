<style>
  .about-page {
    padding: 8rem 2rem 6rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Header */
  .page-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  /* Sections */
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 2rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  section {
    margin-bottom: 5rem;
  }

  /* Story Timeline */
  .story-timeline {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .story-timeline::before {
    content: '';
    position: absolute;
    left: 23px;
    top: 24px;
    bottom: 24px;
    width: 2px;
    background: linear-gradient(to bottom, var(--color-accent), var(--color-border));
  }

  .timeline-item {
    display: flex;
    gap: 1.5rem;
    position: relative;
  }

  .timeline-marker {
    width: 48px;
    height: 48px;
    min-width: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-card);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-accent);
    z-index: 1;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-marker {
    border-color: var(--color-accent);
    background: var(--color-accent-glow);
    transform: scale(1.1);
  }

  .timeline-content {
    flex: 1;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-content {
    border-color: var(--color-accent);
    transform: translateX(8px);
  }

  .timeline-label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: var(--color-accent-glow);
    border-radius: 4px;
  }

  .timeline-content p {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  /* Principles */
  .principles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .principle-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.75rem;
    transition: all 0.3s ease;
  }

  .principle-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .principle-number {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .principle-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .principle-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Experience */
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .experience-item {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .exp-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .exp-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .exp-company {
    font-size: 0.9375rem;
    color: var(--color-accent);
  }

  .exp-date {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-text-dim);
  }

  .exp-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .exp-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .exp-highlights li {
    position: relative;
    padding-left: 1.25rem;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .exp-highlights li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  .exp-highlights li:last-child {
    margin-bottom: 0;
  }

  .education-item {
    border-left: 3px solid var(--color-accent);
  }

  .education-item .exp-header {
    margin-bottom: 0;
  }

  .resume-cta {
    text-align: center;
    margin-top: 2rem;
  }

  /* Certifications */
  .certs-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    padding: 1.25rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .cert-item:hover {
    border-color: var(--color-accent);
    transform: translateX(8px);
  }

  .cert-icon {
    width: 48px;
    height: 48px;
    min-width: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-glow);
    border-radius: 10px;
    color: var(--color-accent);
  }

  .cert-info {
    flex: 1;
  }

  .cert-info h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .cert-info p {
    font-size: 0.8125rem;
    color: var(--color-text-dim);
  }

  .cert-arrow {
    color: var(--color-text-dim);
    transition: all 0.3s ease;
  }

  .cert-item:hover .cert-arrow {
    color: var(--color-accent);
    transform: translate(4px, -4px);
  }

  /* Skills */
  .skills-section {
    margin-bottom: 5rem;
  }

  .skills-category {
